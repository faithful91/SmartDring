<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent" 
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/img2">
<TableLayout 
  android:stretchColumns="1"
  
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
  <TableRow
    android:paddingTop="10px"
    android:paddingBottom="20px">
    <TextView android:text="Alarm:"   	android:textColor="#FFFFFF"
        />
    <SeekBar
      android:id="@+id/alarm"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/alarmtxtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
                                      
  </TableRow>
  <TableRow
    android:paddingBottom="20px">
    <TextView android:text="Music:" />
    <SeekBar
      android:id="@+id/music"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/musictxtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
                                      
  </TableRow>
  <TableRow
    android:paddingBottom="20px">
    <TextView android:text="Ring:" />
    <SeekBar
      android:id="@+id/ring"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/ringtxtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
                                      
  </TableRow>
  <TableRow
    android:paddingBottom="20px">
    <TextView android:text="System:" />
    <SeekBar
      android:id="@+id/system"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/systemtxtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
                                      
  </TableRow>
  <TableRow>
    <TextView android:text="Voice:" />
    <SeekBar
      android:id="@+id/voice"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/voicetxtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />
                                      
  </TableRow>

</TableLayout></LinearLayout>